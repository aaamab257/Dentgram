<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin15dp">

    <View
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/image_height"
        android:layout_height="@dimen/image_height"
        android:layout_marginEnd="@dimen/margin15dp"
        android:layout_marginRight="@dimen/margin15dp"
        android:background="#E3D5D5" />

    <View
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/thumbnail"
        android:layout_toRightOf="@id/thumbnail"
        android:background="#E3D5D5" />

    <View
        android:layout_width="100dp"
        android:layout_height="@dimen/margin15dp"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/thumbnail"
        android:layout_toRightOf="@id/thumbnail"
        android:background="#E3D5D5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:background="#E3D5D5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="#E3D5D5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="160dp"
            android:layout_marginRight="160dp"
            android:background="#E3D5D5" />

    </LinearLayout>

</RelativeLayout>